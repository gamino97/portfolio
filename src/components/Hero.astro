---
import type { BaseProps } from "./typings";
import myPhoto from "@images/photo.jpg";
import { Image } from "@astrojs/image/components";
import translations from "src/data/translations/hero";

const { language } = Astro.props;
export type Props = BaseProps;
---

<section class="container">
  <Image
    src={myPhoto}
    alt={translations.pictureAlt[language]}
    width={128}
    format="webp"
  />
  <div>
    <h1>Carlos Gamino</h1>
    <h2>{translations.heroTitle[language]}</h2>
    {/*Github and Resume */}
  </div>
</section>
<style>
  .container {
    padding: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100svh;
  }

  img {
    --size: 300px;

    border-radius: 50%;
    height: var(--size);
    width: var(--size);
  }

  div {
    margin: var(--size-fluid-4);
  }

  h1 {
    font-weight: var(--font-weight-6);
  }

  h2 {
    color: hsl(var(--accent2) / 70%);
    margin: 0;
  }

  @media (min-width: 1024px) {
    .container {
      flex-direction: row;
      justify-content: space-evenly;
    }
  }
</style>
