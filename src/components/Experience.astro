---
import { Icon } from "astro-icon";

interface Technology {
  name: string;
  icon: string;
  className?: string;
}

interface Experience {
  name: string;
  description?: string;
  technologies: Technology[];
}

const experiences: Experience[] = [
  {
    name: "Freelance",
    technologies: [
      { name: "Django Rest Framework", icon: "vscode-icons:file-type-django" },
      { name: "SQL", icon: "mdi:sql-query" },
      { name: "Tailwind", icon: "logos:tailwindcss-icon" },
      { name: "React", icon: "logos:react" },
      { name: "Next.js", icon: "logos:nextjs-icon", className: "nextjs-class" },
      { name: "Docker", icon: "logos:docker-icon" },
    ],
  },
  {
    name: "COVEICyDET",
    description: "7 months as junior developer",
    technologies: [
      { name: "Django", icon: "logos:django-icon" },
      { name: "Bootstrap", icon: "logos:bootstrap" },
      { name: "HTML", icon: "vscode-icons:file-type-html" },
      { name: "CSS", icon: "vscode-icons:file-type-css" },
      { name: "Javascript", icon: "logos:javascript" },
      { name: "SQL", icon: "mdi:sql-query" },
    ],
  },
];
---

<section id="experience" class="container">
  <h2>Experience</h2>
  <div class="experiences-wrapper">
    {
      experiences.map((experience) => (
        <div class="experience">
          <h3 class="experience-name">{experience.name}</h3>
          {experience.description && (
            <p class="experience-description">{experience.description}</p>
          )}
          <ul class="technologies-wrapper">
            {experience.technologies.map((technology) => (
              <li>
                <Icon
                  name={technology.icon}
                  width={25}
                  class:list={["technology-icon", technology.className]}
                />
                <span>{technology.name}</span>
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</section>

<style>
  h2 {
    margin: 0 0 var(--size-fluid-4);
  }

  .experiences-wrapper {
    display: grid;
    gap: var(--size-fluid-4);
  }

  .experience-name {
    margin: 0 0 var(--size-fluid-2);
  }

  span {
    font-size: var(--font-size-0);
  }

  section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: var(--size-fluid-1);
    text-align: center;
  }

  .experience {
    max-width: 100%;
    border: 2px solid hsl(var(--accent1));
    padding: var(--size-fluid-2);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .experience-description {
    margin: 0 0 var(--size-fluid-2);
  }

  .technologies-wrapper {
    display: flex;
    gap: var(--size-fluid-1);
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
  }

  .technologies-wrapper > li {
    display: flex;
    align-items: center;
  }

  .technology-icon {
    margin-right: var(--size-1);
  }

  .nextjs-class {
    background-color: hsl(var(--white));
    border-radius: 50%;
  }

  @media (min-width: 1024px) {
    .experiences-wrapper {
      flex-direction: row;
      grid-template-columns: 1fr 1fr;
    }
  }
</style>
