---
import type { BaseProps } from "./typings";
import { Image } from "@astrojs/image/components";
import myDesktop from "@images/desktop.jpg";
import translations from "src/data/translations/aboutMe";

const { language } = Astro.props;
export type Props = BaseProps;
---

<section class="container" id="about">
  <h2>{translations.title[language]}</h2>
  <div class="about-content">
    <Image
      src={myDesktop}
      alt={translations.photoAlt[language]}
      height={720}
      format="webp"
    />
    <div class="about-text">
      <p>{translations.aboutText1[language]}</p>
      <p>{translations.aboutText2[language]}</p>
      <p>{translations.aboutText3[language]}</p>
    </div>
  </div>
</section>

<style>
  img {
    width: 50%;
    height: auto;
    margin: auto auto var(--size-fluid-2);
    object-fit: cover;
    padding: var(--size-fluid-2);
  }

  h2 {
    text-align: center;
    margin: 0 0 var(--size-fluid-4);
  }

  .about-content {
    display: grid;
    grid-template-columns: 1fr;
  }

  p {
    max-width: 60ch;
    font-size: var(--font-size-1);
    word-wrap: break-word;
    margin: auto;
  }

  .about-text {
    padding: var(--size-fluid-2);
    margin: auto;
  }

  .about-text p:first-child {
    text-indent: 2ch;
  }

  .about-text p:nth-child(2) {
    text-indent: 2ch;
    margin-top: var(--size-fluid-2);
  }

  @media (min-width: 1024px) {
    img {
      width: 100%;
      margin: 0;
    }

    .about-content {
      grid-template-columns: 1fr 1fr;
    }

    .about-me-actions {
      max-width: 45ch;
    }

    p {
      max-width: 45ch;
    }
  }
</style>
