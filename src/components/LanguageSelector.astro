---
import { Language } from "./typings";
import type { BaseProps } from "./typings";
export type Props = BaseProps;
const { language } = Astro.props;
const languageNames: Record<Language, string> = {
  en: "ðŸ‡ºðŸ‡¸",
  es: "ðŸ‡²ðŸ‡½",
};
---

<select class="language-selector">
  {
    Object.entries(Language).map(([keyLanguage, value]) => (
      <option value={value} selected={language === value}>
        {languageNames[value]} {keyLanguage}
      </option>
    ))
  }
</select>

<script>
  const select =
    document.querySelector<HTMLSelectElement>(".language-selector")!;
  select.addEventListener("change", () => {
    let newLocation = `/${select.value}`;
    if (select.value === "en") {
      newLocation = "/";
    }
    window.location.href = newLocation;
  });
</script>

<style>
  /*
    Style taken from here:
    https://codepen.io/vkjgr/pen/VYMeXp
  */

  .language-selector {
    background-color: hsl(var(--bkg-alt));
    color: hsl(var(--text));
    border: thin solid hsl(var(--accent1) / 30%);
    border-radius: 4px;
    display: inline-block;
    font: inherit;
    line-height: 1.5em;
    padding: 0.5em 3.5em 0.5em 1em;
    width: 95px;
    margin: 0;
    box-sizing: border-box;
    appearance: none;
    background-image: linear-gradient(
        45deg,
        transparent 50%,
        hsl(var(--white)) 50%
      ),
      linear-gradient(135deg, hsl(var(--white)) 50%, transparent 50%),
      linear-gradient(to right, transparent, transparent);
    background-position: calc(100% - 20px) calc(1em + 2px),
      calc(100% - 15px) calc(1em + 2px), 100% 0;
    background-size: 5px 5px, 5px 5px, 2.5em 2.5em;
    background-repeat: no-repeat;
  }

  @media (min-width: 1024px) {
    .language-selector {
      width: auto;
    }
  }

  .language-selector:focus {
    background-image: linear-gradient(45deg, white 50%, transparent 50%),
      linear-gradient(135deg, transparent 50%, white 50%),
      linear-gradient(to right, gray, gray);
    background-position: calc(100% - 15px) 1em, calc(100% - 20px) 1em, 100% 0;
    background-size: 5px 5px, 5px 5px, 2.5em 2.5em;
    background-repeat: no-repeat;
    border-color: hsl(var(--accent1));
    outline: 2px solid hsl(var(--accent1));
    outline-offset: 2px;
  }

  .language-selector option {
    background-color: hsl(var(--bkg-alt));
    color: hsl(var(--text));
  }
</style>
